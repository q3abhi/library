@{
    ViewBag.Title = "AddBooks";
}

<h2>Add a book</h2><br>

<div ng-controller="AddBooks">
        
    <form  name="addBook" ng-submit="AddBook()" novalidate>
         
        <label>Name</label>
        
        <input type="text" name="name" ng-model="name" ng-pattern="/^[a-zA-Z0-9 ]*$/" 
               required /> 

        <label>Description</label>
        <input type="text" name="description" ng-model="description" ng-pattern="/^[a-zA-Z ]*$/" required />
        
        <label>Author</label>
        <input type="text" name="author" ng-model="author" ng-pattern="/^[a-zA-Z ]*$/"
               required />
        
        <label>Publisher</label>
        <input type="text" name="publisher" ng-model="publisher" ng-pattern="/^[a-zA-Z ]*$/"
               required />
        
        <label>Price</label>
        <input type="text" name="price" ng-model="price" ng-pattern="/^[0-9]*$/" required />
        
        <label>Copies</label>
        <input type="text" name="copies" ng-model="copies" ng-pattern="/^[0-9]*$/" required />
        <br><br>
           
        <button type="submit" ng-disabled="addBook.$invalid">Submit</button>
        
    </form>
</div>