@model IList<ModelLibrary.Book>

<h2>Books in the library</h2>
<br/><br/>

<table>
    
    <th>Name</th>
    <th>Description</th>   
    <th>Author</th>
    <th>Publisher</th>
    <th>Price</th>
    <th>Copies Available</th>
    <th>Copies for Issue</th>

    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Name</td>
            <td>@book.Description</td>
            <td>@book.Author</td>
            <td>@book.Publisher</td>
            <td>@book.Price</td>
            <td>@book.Copies</td>
            <td>@book.ToBeIssued</td>
        </tr>
    }

</table>