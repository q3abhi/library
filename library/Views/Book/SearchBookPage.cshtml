<div ng-controller="bookSearch">
<h2>Search Books</h2>

<br/><br/>
<form ng-submit="submitSearch(@ViewBag.userId)">
    <label>Search by Book Name / Author / Publisher </label>
    <input type="text" ng-model="searchString"/>
    <button type="submit">Search</button>
</form>
<br>
<div ng-show="loadingFlag"><img src="../../Content/36.gif"></img></div>    
<div ng-bind-html="result" ng-show="resultFlag"></div>

</div>